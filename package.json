{
  "name": "@chubbyts/petstore",
  "version": "1.0.0",
  "description": "An api skeleton using postgres for chubbyts-framework.",
  "type": "module",
  "keywords": [
    "chubbyts",
    "framework",
    "skleton",
    "api",
    "postgres"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/petstore",
  "scripts": {
    "build": "rm -Rf dist && tsc",
    "command": "ts-node bin/console.ts",
    "cs-fix": "prettier --write bin bootstrap config src tests *.js *.ts",
    "cs": "prettier --check bin bootstrap config src tests *.js *.ts",
    "db:push": "drizzle-kit push",
    "develop:debug": "tsx watch --inspect=0.0.0.0:8888 bootstrap/index.ts",
    "develop": "tsx watch bootstrap/index.ts",
    "infection": "stryker run",
    "lint-fix": "eslint bin bootstrap config src tests *.js *.ts --fix",
    "lint": "eslint bin bootstrap config src tests",
    "start:debug": "pnpm install && pnpm run lint-fix && pnpm run cs-fix && pnpm db:push && pnpm run develop:debug",
    "start": "pnpm install && pnpm run lint-fix && pnpm run cs-fix && pnpm db:push && pnpm run develop",
    "test:integration": "vitest --config vitest.integration.config.js",
    "test": "vitest --config vitest.config.js"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@chubbyts/chubbyts-api": "^6.3.0",
    "@chubbyts/chubbyts-decode-encode": "^2.1.0",
    "@chubbyts/chubbyts-dic": "^2.0.2",
    "@chubbyts/chubbyts-dic-config": "^2.0.1",
    "@chubbyts/chubbyts-dic-types": "^2.0.1",
    "@chubbyts/chubbyts-framework": "^2.0.1",
    "@chubbyts/chubbyts-framework-router-path-to-regexp": "^2.0.2",
    "@chubbyts/chubbyts-http": "^2.0.1",
    "@chubbyts/chubbyts-http-cors": "^2.0.1",
    "@chubbyts/chubbyts-http-error": "^3.0.1",
    "@chubbyts/chubbyts-http-node-bridge": "^2.0.1",
    "@chubbyts/chubbyts-http-types": "^3.0.1",
    "@chubbyts/chubbyts-log-types": "^3.0.1",
    "@chubbyts/chubbyts-negotiation": "^4.0.2",
    "@chubbyts/chubbyts-pino-adapter": "^3.0.1",
    "commander": "^14.0.0",
    "drizzle-orm": "^0.44.5",
    "openapi3-ts": "^4.5.0",
    "pg": "^8.16.3",
    "pino": "^9.9.0",
    "uuid": "^11.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@chubbyts/chubbyts-eslint": "^4.0.7",
    "@chubbyts/chubbyts-function-mock": "^2.0.2",
    "@stryker-mutator/core": "^9.1.0",
    "@stryker-mutator/typescript-checker": "^9.1.0",
    "@stryker-mutator/vitest-runner": "^9.1.0",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "connection-string": "^5.0.0",
    "cross-fetch": "^4.1.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.34.0",
    "prettier": "^3.6.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  },
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}

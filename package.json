{
  "name": "@chubbyts/petstore",
  "version": "1.0.0",
  "description": "An api skeleton using mongodb for chubbyts-framework.",
  "keywords": [
    "chubbyts",
    "framework",
    "skleton",
    "api",
    "mongodb"
  ],
  "author": "Dominik Zogg",
  "license": "MIT",
  "repository": "chubbyts/petstore",
  "scripts": {
    "cs-fix": "prettier --write bin bootstrap config src tests",
    "cs": "prettier --check bin bootstrap config src tests",
    "test": "jest",
    "test:integration": "jest --config jest.integration.config.js",
    "infection": "stryker run",
    "build": "rm -Rf dist && tsc",
    "start": "nodemon bootstrap/index.ts",
    "command": "ts-node bin/console.ts"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/tests/unit/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 100
      }
    }
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "@chubbyts/chubbyts-api": "^1.4.0",
    "@chubbyts/chubbyts-cors": "^1.0.3",
    "@chubbyts/chubbyts-decode-encode": "^1.1.0",
    "@chubbyts/chubbyts-dic": "^1.0.2",
    "@chubbyts/chubbyts-dic-config": "^1.0.2",
    "@chubbyts/chubbyts-dic-types": "^1.0.0",
    "@chubbyts/chubbyts-framework": "^1.3.0",
    "@chubbyts/chubbyts-framework-router-path-to-regexp": "^1.0.2",
    "@chubbyts/chubbyts-http": "^1.0.0",
    "@chubbyts/chubbyts-http-error": "^1.0.0",
    "@chubbyts/chubbyts-http-types": "^1.0.0",
    "@chubbyts/chubbyts-log-types": "^1.0.0",
    "@chubbyts/chubbyts-mongodb": "^1.0.0",
    "@chubbyts/chubbyts-negotiation": "^3.0.0",
    "@chubbyts/chubbyts-node-http-bridge": "^1.0.0",
    "@chubbyts/chubbyts-pino-adapter": "^1.0.0",
    "commander": "^9.3.0",
    "get-stream": "^6.0.1",
    "mongodb": "^4.7.0",
    "pino": "^7.11.0",
    "uuid": "^8.3.2",
    "zod": "^3.17.3"
  },
  "devDependencies": {
    "@shelf/jest-mongodb": "^3.0.1",
    "@stryker-mutator/core": "^6.0.2",
    "@stryker-mutator/jest-runner": "^6.0.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^14.18.21",
    "@types/uuid": "^8.3.4",
    "cross-fetch": "^3.1.5",
    "jest": "^28.1.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "typescript": "^4.7.3"
  }
}
